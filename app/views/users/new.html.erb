<% provide :title, t(".signup") %>

<h1><%= t ".signup" %></h1>
<p><%= t ".signup_desc" %></p>

<div class="row">
  <div class="col-md-12 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t(".confirmation") %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t(".signup"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
